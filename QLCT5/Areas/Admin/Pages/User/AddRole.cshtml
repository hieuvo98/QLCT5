@page "/admin/assign-user-role/{id}"
@model AddRoleModel
@{
    ViewData["Title"] = "Thêm  quyền cho người dùng";
}

<h4>Thiết lập quyền cho thành viên: @Model.user.UserName</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleNames"></label>
                @Html.ListBoxFor(m=>m.RoleNames, Model.allRoles, new
                {
                    id = "id-select-roles",
                    @class = "form-control"
                })
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-page="./Index1" class="btn btn-secondary btn-sm">Quay lại danh sách</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}