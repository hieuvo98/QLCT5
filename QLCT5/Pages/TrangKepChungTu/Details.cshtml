@page "/trangkepchungtu/details/{id:int}"
@model QLCT5.Pages.TrangKepChungTu.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Thông tin chi tiết kẹp chứng từ</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KepChungTu.IdKepChungTu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KepChungTu.IdKepChungTu)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KepChungTu.SoHopDong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KepChungTu.SoHopDong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KepChungTu.TenKepChungTu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KepChungTu.TenKepChungTu)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KepChungTu.NamCt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KepChungTu.NamCt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KepChungTu.ThangCt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KepChungTu.ThangCt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KepChungTu.IdTuKeNavigation)
        </dt>
        <dd class="col-sm-10">
            <a asp-page="/TrangTuKe/Details" asp-route-id="@Model.KepChungTu.IdTuKe">@Html.DisplayFor(model => model.KepChungTu.IdTuKeNavigation.TenTuKe)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KepChungTu.IdTuKeNavigation.IdKhoNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KepChungTu.IdTuKeNavigation.IdKhoNavigation.TenKho)
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.KepChungTu.IdKepChungTu">Sửa</a> |
    <a asp-page="./Index">Quay lại danh sách</a>
</div>
<hr />

<h4>Danh sách tập chứng từ trong kẹp này</h4>
<p>   
    <a class="btn btn-success btn-sm" asp-page="AddChungTu" asp-route-id="@Model.KepChungTu.IdKepChungTu">+ Thêm mới tập chứng từ vào kẹp này </a>   
</p>
<table class="table">   
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChungTu[0].TenChungTu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChungTu[0].MaChungTu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChungTu[0].NgayChungTu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChungTu[0].SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChungTu[0].IdDonViNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.KepChungTu.ChungTus)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenChungTu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaChungTu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayChungTu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDonViNavigation.TenDonVi)
            </td>
            <td>
                <a class="btn btn-primary btn-sm" asp-page="/TrangChungTu/Edit" asp-route-id="@item.IdChungTu">Sửa</a> |
                <a class="btn btn-warning btn-sm" asp-page="/TrangChungTu/Details" asp-route-id="@item.IdChungTu">Xem chi tiết</a> |
                <a class="btn btn-danger btn-sm" asp-page="/TrangChungTu/Delete" asp-route-id="@item.IdChungTu">Xóa</a>
            </td>
        </tr>
        }
 
</table>
        


