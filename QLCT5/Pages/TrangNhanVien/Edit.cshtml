@page
@model QLCT5.Pages.TrangNhanVien.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa thông tin nhân viên</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NhanVien.IdNhanVien" />
            <div class="form-group">
                <label asp-for="NhanVien.HoTen" class="control-label"></label>
                <input asp-for="NhanVien.HoTen" class="form-control" />
                <span asp-validation-for="NhanVien.HoTen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NhanVien.Email" class="control-label"></label>
                <input asp-for="NhanVien.Email" class="form-control" />
                <span asp-validation-for="NhanVien.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NhanVien.SoDt" class="control-label"></label>
                <input asp-for="NhanVien.SoDt" class="form-control" />
                <span asp-validation-for="NhanVien.SoDt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NhanVien.IdPhongBanNavigation.TenPhongBan" class="control-label"></label>
                <select asp-for="NhanVien.IdPhongBan" class="form-control" asp-items="ViewBag.TenPhongBan"></select>
                <span asp-validation-for="NhanVien.IdPhongBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NhanVien.IdChucDanhNavigation.TenChucDanh" class="control-label"></label>
                <select asp-for="NhanVien.IdChucDanh" class="form-control" asp-items="ViewBag.TenChucDanh"></select>
                <span asp-validation-for="NhanVien.IdChucDanh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NhanVien.IdDonViNavigation.TenDonVi" class="control-label"></label>
                <select asp-for="NhanVien.IdDonVi" class="form-control" asp-items="ViewBag.TenDonVi"></select>
                <span asp-validation-for="NhanVien.IdDonVi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
