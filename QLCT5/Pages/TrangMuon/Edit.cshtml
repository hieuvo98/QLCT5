@page
@model QLCT5.Pages.TrangMuon.EditModel

@{
    ViewData["Title"] = "Cập nhật thông tin mượn";
}

<h1>Cập nhật thông tin mượn</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Muon.MuonId" />
            <div class="form-group">
                <label asp-for="Muon.NhanVienCho" class="control-label"></label>
                <select asp-for="Muon.MaNvCho" class="form-control" asp-items="ViewBag.TenNhanVien"></select>
                <span asp-validation-for="Muon.MaNvCho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Muon.NhanVienMuon" class="control-label"></label>
                <select asp-for="Muon.MaNvMuon" class="form-control" asp-items="ViewBag.TenNhanVien"></select>
            </div>
            <div class="form-group">
                <label asp-for="Muon.GhiChu" class="control-label"></label>
                <input asp-for="Muon.GhiChu" class="form-control" />
                <span asp-validation-for="Muon.GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Muon.TrangThai" class="control-label"></label>
                <input asp-for="Muon.TrangThai" disabled />
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Details" asp-route-id="@Model.Muon.MuonId">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
