@page
@model QLCT5.Pages.TrangMuon.CreateModel

@{
    ViewData["Title"] = "Mượn CT";
}

<h1>Tạo yêu cầu mượn chứng từ</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Muon.NhanVienCho" class="control-label"></label>
                <select asp-for="Muon.MaNvCho" class="form-control" asp-items="ViewBag.TenNhanVienCho"></select>
            </div>
            <div class="form-group">
                <label asp-for="Muon.NhanVienMuon" class="control-label"></label>
                <select asp-for="Muon.MaNvMuon" class="form-control" asp-items="ViewBag.TenNhanVien"></select>
            </div>
            <div class="form-group">
                <label asp-for="Muon.GhiChu" class="control-label"></label>
                <input asp-for="Muon.GhiChu" class="form-control" />
                <span asp-validation-for="Muon.GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Quay lại danh sách mượn</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
